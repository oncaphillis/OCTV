<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="160dp"
	    android:layout_marginBottom="4dp"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp"
	    android:layout_marginTop="4dp"
	    android:background="@color/oncaphillis_grey"
	    android:minHeight="80dp"
	    android:orientation="horizontal"
	    android:padding="4dp"
	    android:paddingBottom="4dp"
	    android:paddingTop="4dp" >
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="4dp" >
	
	        <ImageView
	            android:id="@+id/series_list_image"
	            android:layout_width="92dp"
	            android:layout_height="135dp"
	            android:src="@drawable/no_image" />
	
	        <ProgressBar
	            android:id="@+id/series_wait_bar"
	            android:layout_width="64dp"
	            android:layout_height="fill_parent"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true" />

	        <TextView
	            android:id="@+id/series_list_firstaired"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@id/series_list_image"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="false"
	            android:gravity="center_vertical"
	            android:text="2006" />
	
	    </RelativeLayout>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal" >
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/series_title"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:maxLines="3"
	                android:shadowColor="@color/list_item1_color"
	                android:text="Large Text"
	                android:textSize="20sp" />

	            <TextView
	                android:id="@+id/series_network"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="Network"
	                android:textAppearance="?android:attr/textAppearanceSmall" />

	            <LinearLayout
	                android:id="@+id/series_nearest_episode"
	                android:layout_width="match_parent"
	                android:layout_height="fill_parent"
	                android:background="@color/oncaphillis_light_grey"
	                android:orientation="vertical" >

	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content" >

	                    <TextView
	                        android:id="@+id/series_airing_state"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:gravity="center_vertical"
	                        android:padding="4dp"
	                        android:text="next"
	                        android:textStyle="bold" />

	                    <TextView
	                        android:id="@+id/series_time"
	                        android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:text="Time"
	                        android:textAppearance="?android:attr/textAppearanceMedium" />
	                </LinearLayout>

	                <TextView
	                    android:id="@+id/series_last_episode"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="2"
	                    android:text="Medium Text"
	                    android:textAppearance="?android:attr/textAppearanceMedium" />

	            </LinearLayout>
	
	        </LinearLayout>
	    </LinearLayout>
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent" >
	
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>
